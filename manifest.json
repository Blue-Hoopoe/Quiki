{
    "manifest_version": 2,
    "name": "quiki",
    "short_name": "quiki",
    "homepage_url": "https://github.com/Blue-Hoopoe/quiki",
    "description": "Nieoficjalny dodatek ułatwiający korzystanie z angielsko-polskiego słownika diki.pl.",
    "version": "0.5.35",
    "version_name": "0.5.35 (alpha)",
    "author": [{
        "name": "Maciej Dudek",
        "a.k.a.": "Blue-Hoopoe",
        "email": "quiki.extension@gmail.com"
    }],
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "64": "icons/icon_64.png",
        "128": "icons/icon_128.png",
        "256": "icons/icon_256.png",
        "512": "icons/icon_512.png"
    },
    "browser_action": {
        "default_icon": "icons/icon_512.png",
        "default_popup": "pages/views/popup.html"
    },
    "background": {
        "scripts": [
            "quiki-framework/base/QuikiAnalytics.js",
            "quiki-framework/base/QuikiStorageManager.js",
            "quiki-framework/base/QuikiService.js",
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "js": [
            "vendor/jquery-3.3.1/jquery-3.3.1.min.js",
            "quiki-framework/base/QuikiClient.js",
            "content-script.js"
        ],
        "css": [
            "styles/quiki-modal.css"
        ],
        "run_at": "document_start"
    }],
    "permissions": [
        "contextMenus"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Q",
                "mac": "Alt+Shift+Q"
            },
            "description": "Włącz/wyłącz okienko dodatku."
        },
        "sendModalRequest": {
            "suggested_key": {
                "default": "Alt+Q"
            },
            "description": "Wyszukaj zaznaczone słowo na aktywnej karcie."
        }
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}